  <modelVersion>4.0.0</modelVersion>
  <groupId>com</groupId>
  <artifactId>Grapher-core</artifactId>
  <version>@version@</version>
  <name>Grapher core</name>
  <description>set of general purpose tools for manipulating Graphs using JGraphT (core)</description>
  <url>http://cern.ch/hrivnac/Activities/Packages/Grapher</url>
  
  <licenses>
    <license>
      <name>GNU General Public License</name>
      <url>https://www.gnu.org/licenses/gpl-3.0.txt</url>
      </license>
    </licenses>

  <developers>
    <developer>
      <name>Julius Hrivnac</name>
      <email>Julius.Hrivnac@cern.ch</email>
      </developer>
    </developers>  
  
  <scm>
    <connection>scm:git:https://github.com/hrivnac/Grapher</connection>
